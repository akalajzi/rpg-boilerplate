[strict]
unsafe-getters-setters
untyped-import
untyped-type-import

[lints]
all=error
# Due to Relay
nonstrict-import=off
unclear-type=off
sketchy-null=off

[ignore]
<PROJECT_ROOT>\/data\/.*
<PROJECT_ROOT>\/node_modules\/graphviz\/.*
<PROJECT_ROOT>\/.cache/.*

[include]

[libs]
src/types/

[options]
emoji=true

module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.css
module.file_ext=.scss
# we dont need flow to go into css/scss definitions
module.name_mapper.extension='css' -> 'empty/object'
module.name_mapper.extension='scss' -> 'empty/object'

module.name_mapper='^components\(.*\)$' -> '<PROJECT_ROOT>/src/components/\1'
module.name_mapper='^scenes\(.*\)$' -> '<PROJECT_ROOT>/src/scenes/\1'
module.name_mapper='^themes\(.*\)$' -> '<PROJECT_ROOT>/src/themes/\1'

suppress_comment=\\(.\\|\n\\)*\\$FlowFixMe
suppress_comment=\\(.\\|\n\\)*\\$FlowIssue
suppress_comment=\\(.\\|\n\\)*\\$FlowExpected
suppress_comment=\\(.\\|\n\\)*\\$FlowTest
